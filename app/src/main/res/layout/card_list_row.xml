<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="cardData" type="com.example.cardsample3.model.CardData"/>
    </data>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/Isabelline"
        >

        <TextView
            android:id="@+id/dateTime"
            android:text="@{cardData.createdString}"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:paddingStart="20dp"
            android:gravity="center"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/companyName"
            android:text="@{cardData.companyName}"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/personName"
            android:text="@{cardData.personName}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:paddingEnd="20dp"
            android:textAlignment="textEnd"
            android:textSize="16dp" />

    </LinearLayout>


</layout>